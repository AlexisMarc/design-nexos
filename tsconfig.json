/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@login": ["./src/app/core/modules/login/pages/index.ts"],
      "@home": ["./src/app/core/modules/home/components/home.index.ts"],
      "@meeting": ["./src/app/core/modules/meeting/components/meeting.index.ts"],
      "@control": ["./src/app/core/modules/control/components/control.index.ts"],
      "@message": ["./src/app/core/modules/message/components/message.index.ts"],
      "@admin": ["./src/app/core/modules/admin/components/admin.index.ts"],
      "@voters":["./src/app/core/modules/voters/components/voters.index.ts"],
      "@authority": ["./src/app/core/modules/authority/components/authority.index.ts"],
      "@unit": ["./src/app/core/modules/unit/components/unit.index.ts"],
      "@data": ["./src/app/core/modules/data/components/data.index.ts"],
      "@support": ["./src/app/core/modules/support/components/support.index.ts"],
      "@organization": ["./src/app/core/modules/organization/components/organization.index.ts"],
      "@shared": ["./src/app/core/shared/shared.index.ts"],
      "@models": ["./src/app/core/models/models.index.ts"],
      "@register": ["./src/app/core/modules/register/components/register.index.ts"],
      "@ui": ["./src/app/core/ui/ui.index.ts"],
      "@services": ["./src/app/core/services/services.index.ts"],
      "@client": ["./src/app/core/modules/client/components/client.index.ts"]
    },
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
